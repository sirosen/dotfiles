#!/bin/bash
set -e

cd "$(dirname "$0")"

npm install -g \
  openapi3-generator \
  stylelint stylelint-config-standard \
  jsonlint
if [ ! -f openapi3-generator ]; then
  ln -s npm-packages/bin/openapi3-generator openapi3-generator
fi
if [ ! -f stylelint ]; then
  ln -s npm-packages/bin/stylelint stylelint
fi
if [ ! -f jsonlint ]; then
  ln -s npm-packages/bin/jsonlint jsonlint
fi
